<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.mobile.ume.umemobileapp.RetailerOrderActivity">


    <TextView android:text=" Category and Distributor for Order" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textAlignment="center"  android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>

    <LinearLayout android:layout_height="60dp" android:layout_width="match_parent"
        android:orientation="horizontal" android:layout_marginTop="50dp">
        <TextView android:text="Select Category" android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1" android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout android:layout_height="60dp" android:layout_width="match_parent"
        android:orientation="horizontal" android:layout_marginTop="20dp">
    <TextView android:text="Select Distributor" android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"  />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Products"
        android:id="@+id/viewordereditem" android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
